<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" >

        <test verbose="10" name="Scenario 1: Users are able to search for an item using the search bar" enabled="false" >
            <classes>
                <class name="UI_Automation.Tests.HomePageTests">
                    <methods>
                        <exclude name="testClickMenuWomen"/>
                    </methods>
                </class>
                <class name="UI_Automation.Tests.HeaderTests"/>
                <class name="UI_Automation.Tests.SearchResultPageTests"/>
            </classes>
        </test>

        <test verbose="10" name="Scenario 2: Users are able to filter search results under Women category by Color and Category " enabled="false" >
            <classes>
                <class name="UI_Automation.Tests.HomePageTests"/>
                <class name="UI_Automation.Tests.WomenPageTests"/>
            </classes>
        </test>
    <test verbose="10" name="Scenario 3 " enabled="true" >
            <classes>
                <class name="UI_Automation.Tests.HomePageTests">
                    <methods>
                        <exclude name="testClickMenuWomen"/>
                    </methods>
                </class>
                <class name="UI_Automation.Tests.ProductDetailsPageTests"/>
            </classes>
        </test>

</suite>